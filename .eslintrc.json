{
    "parser": "babel-eslint",
    "extends": [
        "react-app",
        "prettier",
        "prettier/flowtype", // if you are using flow
        "prettier/react"
    ],
    "rules": {
        "indent": ["error", 4],
        "prettier/prettier": "error"
    },
    "plugins": [
        /* Flow type linting rules for ESLint. */
        "flowtype",
        "prettier"
    ]
}
